        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="24dip"
        android:layout_below="@+id/computer_user_label"
        android:layout_toRightOf="@+id/system_boot_time_label"
        android:visibility="gone"/>

    <!-- CPU Statistics Label -->
