<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Status Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracker Not Currently Running"
        android:id="@+id/status_label"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="24dip"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!-- Computer User Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Logged In User:"
        android:id="@+id/computer_user_label"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="24dip"
        android:layout_below="@+id/status_label"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!-- Computer User -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/computer_user"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="24dip"
        android:layout_below="@id/status_label"
        android:layout_toRightOf="@+id/computer_user_label"
        android:visibility="gone"/>

    <!-- System Boot Time Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Boot Time:"
        android:id="@+id/system_boot_time_label"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="24dip"
        android:layout_below="@+id/computer_user_label"
